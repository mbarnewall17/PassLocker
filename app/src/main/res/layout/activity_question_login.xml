<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.barnewall.matthew.passlocker.QuestionLoginActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TopLinearLayout"
            android:gravity="center"
            android:background="#B78D78"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:textSize="45sp"
                android:text="Pass Locker"
                android:id="@+id/nameTextView"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/lowSecurityImageView"
            android:layout_gravity="center"
            android:src="@drawable/highsecurity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer The Question"
            android:id="@+id/answerQuestionTextView"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questionTextView"
            android:textSize="30dp"
            android:background="#B78D78" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerLinearLayout"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Answer:"
                android:id="@+id/answerTextView"
                android:textSize="25dp"
                android:layout_weight="5" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerEditText"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navigationButtonsLinearLayout"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/backButton"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:onClick="onBackPressed" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/paddingTextView" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/nextButton"
                android:textSize="25dp"
                android:onClick="nextQuestion" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
