<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.barnewall.matthew.passlocker.DisplayInfoActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textFieldsLinearLayout"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/iconImageView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailLinearLayout"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail:"
                    android:id="@+id/emailTextView"
                    android:textSize="30sp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/emailDatastoreValueTextView"
                    android:scrollbars="vertical"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:background="@drawable/edittextstyle"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usernameLinearLayout"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username:"
                    android:id="@+id/usernameTextView"
                    android:textSize="30dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/usernameDatastoreValueTextView"
                    android:scrollbars="vertical"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:background="@drawable/edittextstyle"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/urlLinearLayout"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="URL:"
                    android:id="@+id/urlTextView"
                    android:textSize="30dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/URLDatastoreValueTextView"
                    android:scrollbars="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:textSize="25sp"
                    android:paddingLeft="5dp" />/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open URL"
                android:id="@+id/urlButton"
                android:layout_gravity="center_horizontal"
                android:onClick="openURL" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordLinearLayout"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:id="@+id/passwordTextView"
                    android:textSize="30dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/passwordDatastoreValueTextView"
                    android:scrollbars="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:textSize="25sp"
                    android:paddingLeft="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordButtonLinearLayout"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Show Password"
                android:id="@+id/showButton"
                android:layout_marginRight="15dp"
                android:onClick="showPassword" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Copy Password"
                android:id="@+id/copyButton"
                android:layout_marginLeft="15dp"
                android:onClick="copyPassword" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
